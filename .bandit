[bandit]
# Bandit configuration for XSEMA
# This file configures the Bandit security scanner

# Exclude specific directories that generate false positives
exclude_dirs = tests,venv,__pycache__,.pytest_cache,.git,docs,examples,scripts,k8s,monitoring,frontend,my-app

# Skip specific tests that are not relevant
skips = B101,B601,B602,B603,B604,B605,B606,B607,B608,B609,B701,B702,B703,B704,B705,B706,B707,B708,B801,B802,B901,B902,B903,B904,B950

# Set confidence levels
confidence = HIGH,MEDIUM

# Set severity levels
severity = HIGH,MEDIUM
