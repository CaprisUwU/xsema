# XSEMA Phase 4 Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# BLOCKCHAIN RPC ENDPOINTS
# =============================================================================

# Ethereum Network
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
INFURA_API_KEY=your_infura_project_id_here
ETHEREUM_ENABLED=true

# Polygon Network
POLYGON_RPC_URL=https://polygon-rpc.com/
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_ENABLED=true

# Binance Smart Chain
BSC_RPC_URL=https://bsc-dataseed.binance.org/
BSC_ENABLED=true

# Arbitrum Network
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_API_KEY=your_arbitrum_api_key_here
ARBITRUM_ENABLED=true

# Optimism Network
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_API_KEY=your_optimism_api_key_here
OPTIMISM_ENABLED=true

# Base Network
BASE_RPC_URL=https://mainnet.base.org
BASE_API_KEY=your_base_api_key_here
BASE_ENABLED=true

# Avalanche Network
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_API_KEY=your_avalanche_api_key_here
AVALANCHE_ENABLED=true

# Fantom Network
FANTOM_RPC_URL=https://rpc.ftm.tools/
FANTOM_API_KEY=your_fantom_api_key_here
FANTOM_ENABLED=true

# Solana Network
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_API_KEY=your_solana_api_key_here
SOLANA_ENABLED=true

# =============================================================================
# NFT MARKETPLACE API KEYS
# =============================================================================

# OpenSea (Primary NFT marketplace)
OPENSEA_API_KEY=your_opensea_api_key_here
OPENSEA_ENABLED=true

# Magic Eden (Solana NFTs)
MAGIC_EDEN_API_KEY=your_magic_eden_api_key_here
MAGIC_EDEN_ENABLED=true

# Blur (Ethereum NFTs)
BLUR_API_KEY=your_blur_api_key_here
BLUR_ENABLED=true

# LooksRare
LOOKSRARE_API_KEY=your_looksrare_api_key_here
LOOKSRARE_ENABLED=true

# X2Y2
X2Y2_API_KEY=your_x2y2_api_key_here
X2Y2_ENABLED=true

# =============================================================================
# PRICE FEED APIs
# =============================================================================

# CoinGecko (Cryptocurrency prices)
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_ENABLED=true

# CoinMarketCap (Alternative price feed)
CMC_API_KEY=your_cmc_api_key_here
CMC_ENABLED=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/xsema_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (Generate a strong random key)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Settings for user verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_TLS=true

# Email Templates
FROM_EMAIL=noreply@xsema.co.uk
FROM_NAME=XSEMA

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level
LOG_LEVEL=INFO

# Log File
LOG_FILE=xsema.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Railway Environment
RAILWAY_ENVIRONMENT=production
RAILWAY_SERVICE_NAME=xsema-engine

# Port Configuration
PORT=8000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable features
ENABLE_REAL_DATA=true
ENABLE_USER_AUTHENTICATION=false
ENABLE_WEBSOCKETS=false
ENABLE_ANALYTICS=true
ENABLE_LOGGING=true

# Demo Mode
DEMO_MODE=true
DEMO_DATA_SOURCES=["mock", "simulated"]

# =============================================================================
# API RATE LIMITS
# =============================================================================

# Blockchain API limits
BLOCKCHAIN_RATE_LIMIT_PER_MINUTE=50
MARKETPLACE_RATE_LIMIT_PER_MINUTE=100
PRICE_FEED_RATE_LIMIT_PER_MINUTE=200

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache TTL (Time To Live)
CACHE_TTL_MINUTES=5
BLOCKCHAIN_CACHE_TTL_MINUTES=10
MARKETPLACE_CACHE_TTL_MINUTES=2
PRICE_CACHE_TTL_MINUTES=1

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook endpoints for real-time updates
WEBHOOK_OPENSEA=your_webhook_url_here
WEBHOOK_MAGIC_EDEN=your_webhook_url_here
WEBHOOK_BLOCKCHAIN=your_webhook_url_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode (Set to false in production)
DEBUG=false

# Development API keys (for testing)
DEV_OPENSEA_API_KEY=your_dev_opensea_key_here
DEV_INFURA_API_KEY=your_dev_infura_key_here

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit your actual .env file to version control
# 2. Generate strong, unique API keys for each service
# 3. Use environment-specific keys (dev/staging/prod)
# 4. Regularly rotate your API keys
# 5. Monitor API usage to stay within rate limits
# 6. Set up webhook endpoints for real-time data updates
# 7. Configure proper logging and monitoring in production
# 8. Use strong passwords and JWT secrets
# 9. Enable TLS for all external connections
# 10. Set up proper backup and recovery procedures

# =============================================================================
# QUICK START
# =============================================================================

# 1. Copy this file to .env
# 2. Get API keys from:
#    - OpenSea: https://docs.opensea.io/reference/api-overview
#    - Infura: https://infura.io/
#    - Magic Eden: https://docs.magiceden.io/
#    - CoinGecko: https://www.coingecko.com/en/api
# 3. Update the values above
# 4. Restart your application
# 5. Test the new endpoints:
