# NFT Analytics Engine - Production Environment Configuration
# Generated: January 31, 2025

# Application Settings
ENVIRONMENT=production
APP_NAME="NFT Analytics Engine"
APP_VERSION=3.0.0
DEBUG=false
API_PREFIX=/api

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=4
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://nft_user:${POSTGRES_PASSWORD}@postgres:5432/nft_analytics
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_ECHO=false

# Redis Cache Configuration
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600
CACHE_PREFIX=nft_engine

# Security Configuration
SECRET_KEY=${SECRET_KEY}
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
CORS_ORIGINS=["https://yourdomain.com"]
ALLOWED_HOSTS=["yourdomain.com", "api.yourdomain.com"]

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# Blockchain Configuration - Multi-Chain Support
ETHEREUM_RPC_URL=${ETHEREUM_RPC_URL}
POLYGON_RPC_URL=${POLYGON_RPC_URL}
BSC_RPC_URL=${BSC_RPC_URL}
ARBITRUM_RPC_URL=${ARBITRUM_RPC_URL}
OPTIMISM_RPC_URL=${OPTIMISM_RPC_URL}
BASE_RPC_URL=${BASE_RPC_URL}
AVALANCHE_RPC_URL=${AVALANCHE_RPC_URL}
FANTOM_RPC_URL=${FANTOM_RPC_URL}
SOLANA_RPC_URL=${SOLANA_RPC_URL}

# Alchemy API URLs for EVM chains
ALCHEMY_ETH_HTTP_URL=${ALCHEMY_ETH_HTTP_URL}
ALCHEMY_POLYGON_HTTP_URL=${ALCHEMY_POLYGON_HTTP_URL}
ALCHEMY_ARBITRUM_HTTP_URL=${ALCHEMY_ARBITRUM_HTTP_URL}
ALCHEMY_OPTIMISM_HTTP_URL=${ALCHEMY_OPTIMISM_HTTP_URL}

# External API Keys (Set in deployment environment)
ALCHEMY_API_KEY=${ALCHEMY_API_KEY}
OPENSEA_API_KEY=${OPENSEA_API_KEY}
MORALIS_API_KEY=${MORALIS_API_KEY}
ETHERSCAN_API_KEY=${ETHERSCAN_API_KEY}

# Portfolio Module Settings
PORTFOLIO_CACHE_TTL=1800
PORTFOLIO_API_PREFIX=/api/v1/portfolio
PORTFOLIO_PAGINATION_LIMIT=100

# Market Module Settings
MARKET_DATA_UPDATE_INTERVAL=300
MARKET_CACHE_TTL=600
FLOOR_PRICE_UPDATE_INTERVAL=60

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_INTERVAL=5

# Monitoring & Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/nft_engine.log
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Feature Flags
ENABLE_PORTFOLIO_MODULE=true
ENABLE_MARKET_MODULE=true
ENABLE_SECURITY_ANALYSIS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_BATCH_PROCESSING=true

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Security Headers
SECURITY_HEADERS_ENABLED=true
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000
